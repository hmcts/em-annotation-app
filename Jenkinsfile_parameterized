//        sh 'echo "build.number=${BUILD_NUMBER}" >> application/src/main/resources/META-INF/build-info.properties'
//        sh 'echo "build.commit=$(git rev-parse --short HEAD)" >> application/src/main/resources/META-INF/build-info.properties'
//        sh 'echo "build.date=$(date)" >> application/src/main/resources/META-INF/build-info.properties'
//    }
}
